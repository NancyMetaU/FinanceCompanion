generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id
  email           String   @unique
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  monthlyIncome   Float?
  savingsPriority String?
  debtPriority    String?
  spendingFocus   String[] @default([])
}

model PlaidConnection {
  id            String   @id @default(cuid())
  userId        String
  accessToken   String
  itemId        String
  institution   String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Transaction {
  id              String   @id @default(cuid())
  userId          String
  accountId       String
  name            String
  amount          Float
  date            DateTime
  category        String?
  transactionType String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  bankAccount     BankAccount? @relation(fields: [accountId], references: [accountId])
}

model BankAccount {
  id          String   @id @default(cuid())
  userId      String
  accountId   String   @unique
  name        String
  type        String
  subtype     String
  balance     Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions Transaction[]
}
